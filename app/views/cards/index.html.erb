<h1>Cards</h1>
<h3>My profile</h3>
<%= link_to 'Edit', edit_user_path(current_user) %> |
<% if @cards.empty? %>
    <b>no items in store</b>
<% else %>
    <table>
      <tr>
        <th>card id</th>
        <th>original_text</th>
        <th>translated_text</th>
        <th>review_date</th>
      </tr>

      <% @cards.each do |card| %>
          <tr>
            <td><%= link_to card.id, card_path(card) %></td>
            <td><%= card.original_text %></td>
            <td><%= card.translated_text %></td>
            <td><%= card.review_date %></td>
            <td><%= link_to 'Редактировать', edit_card_path(card)%></td>
            <td><%= button_to 'Удалить', card_path(card), method: :delete, data: { confirm: 'indeed?' }%></td>
          </tr>
      <% end %>
<% end %>

<h1>Translate card</h1>
<% if @card.blank? %>
    <b>no items in store</b>
<% else %>
    <p>
      English translation: <%= @card.translated_text %>
    </p>

    <p>
      <%= form_tag trainer_path(@card) do %>
          your translation: <%= text_field_tag :original_text %>
          <%= submit_tag 'check translation' %>
      <% end %>
<% end %>
</p>




