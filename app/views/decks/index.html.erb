<p id="notice"><%= notice %></p>

<h3><% t(:decks) %></h3>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.name %></td>
        <td><%= link_to t(:show), deck %></td>
        <td><%= link_to t(:edit), edit_deck_path(deck) %></td>
        <td><%= link_to t(:delete), deck, method: :delete, data: { confirm: t(:confirm) } %></td>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Deck', new_deck_path %>
