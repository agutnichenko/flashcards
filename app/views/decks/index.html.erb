<p id="notice"><%= notice %></p>

<h1>Decks</h1>

<table>
  <thead>
  <tr>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @decks.each do |deck| %>
      <tr>
        <td><%= deck.name %></td>
        <td><%= link_to 'Show', deck %></td>
        <td><%= link_to 'Edit', edit_deck_path(deck) %></td>
        <td><%= link_to 'Destroy', deck, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% if deck.current? %>
            <td><%= link_to 'make_usual', reset_current_state_deck_path, method: :put %></td>
        <% else %>
            <td><%= link_to 'make current', set_current_state_deck_path(deck), method: :put %></td>
        <% end %>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Deck', new_deck_path %>
